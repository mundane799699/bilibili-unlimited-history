{
  "manifest_version": 3,
  "name": "Bilibili Unlimited History",
  "version": "1.0",
  "description": "View your Bilibili history without limitations",
  "permissions": ["storage", "tabs", "cookies", "alarms"],
  "host_permissions": ["*://*.bilibili.com/*"],
  "action": {
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background/index.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://*.bilibili.com/*"],
      "js": ["content/index.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
