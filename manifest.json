{
  "manifest_version": 3,
  "name": "Bilibili Unlimited History",
  "version": "1.0",
  "description": "无限保存 Bilibili 历史记录",
  "permissions": ["storage", "cookies", "tabs", "alarms"],
  "host_permissions": ["*://*.bilibili.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*.bilibili.com/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
